<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="userService" class="com.jcomdot.simplemvc.UserServiceImpl">
		<property name="userDao" ref="userDao"></property>
		<property name="userLevelUpgradePolicy" ref="userLevelUpgradePolicy"></property>
		<property name="mailSender" ref="mailSender"></property>
	</bean>

	<bean id="userDao" class="com.jcomdot.simplemvc.UserDaoJdbc">
		<property name="dataSource" ref="dataSource"></property>
	</bean>
	<bean id="userLevelUpgradePolicy" class="com.jcomdot.simplemvc.UserLevelUpgradePolicyImpl">
		<property name="userDao" ref="userDao"></property>
	</bean>
	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource"></property>
	</bean>
	<bean id="mailSender" class="com.jcomdot.simplemvc.DummyMailSender" />

	<bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
		<property name="driverClass" value="org.postgresql.Driver"></property>
		<property name="url" value="jdbc:postgresql://localhost/testdb"></property>
		<property name="username" value="spring"></property>
		<property name="password" value="test"></property>
	</bean>

	<bean id="transactionAdvisor" class="org.springframework.aop.support.DefaultPointcutAdvisor">
		<property name="advice" ref="transactionAdvice" />
		<property name="pointcut" ref="transactionPointcut" />
	</bean>
	<bean id="transactionAdvice" class="com.jcomdot.simplemvc.TransactionAdvice">
		<property name="transactionManager" ref="transactionManager" />
	</bean>
	<bean id="transactionPointcut" class="com.jcomdot.simplemvc.jdk.proxy.NameMatchClassMethodPointcut">
		<property name="mappedClassName" value="ServiceImpl" />
		<property name="mappedName" value="upgrade*" />
	</bean>
	<bean class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator" />
</beans>
